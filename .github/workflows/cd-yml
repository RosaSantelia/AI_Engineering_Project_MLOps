name: CD Pipeline
on:
  push:
    branches: [main]
  workflow_dispatch:

jobs:
  Sync to Hugging Face hub:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
        with:
          fetch-depth: 0
          lfs: true
      - name: Push to hub
        env:
          HF_TOKEN: ${{ secrets.HF_TOKEN }}
        run: git push -f https://<user_name>:$HF_TOKEN@huggingface.co/spaces/<user_name>/<repo_name> main